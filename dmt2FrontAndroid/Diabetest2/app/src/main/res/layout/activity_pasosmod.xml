<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profesional.modmision.Pasosmod">


    <TextView
        android:id="@+id/busc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:text="Lista de pasos"
        app:layout_constraintBottom_toTopOf="@+id/recycler_view452"
        app:layout_constraintStart_toStartOf="@+id/recycler_view452" />

    <TextView
        android:id="@+id/mispaso9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/recycler_view452"
        app:layout_constraintStart_toStartOf="@+id/recycler_view452"
        app:layout_constraintTop_toBottomOf="@+id/busc2"
        app:layout_constraintVertical_bias="0.657" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view452"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="116dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="4dp"
        android:text="Finalizar"
        android:onClick="enviar"
        app:layout_constraintStart_toEndOf="@+id/busc2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button32"
        android:onClick="modificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:text="modificar"
        app:layout_constraintEnd_toStartOf="@+id/button43"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>